})%>
```

## Results

<% for (ii in seq_along(data)) { %>
<%
dataLabel <- names(data)[ii]
X <- data[[dataLabel]]
gc()
%>
### <%=dataLabel%> (<%=paste(dim(X), collapse="-by-")%>) matrix

```r
<%=withCapture({
X <- data[[.dataLabel.]]
stats <- microbenchmark(
 colSds        = colSds(X, na.rm=FALSE),
 apply         = apply(X, MARGIN=2L, FUN=sd, na.rm=FALSE),
 colSdColMeans = colSdColMeans(X, na.rm=FALSE),
 unit = "ms"
)
})%>
```

<% benchmarkResults(stats, tags=dataLabel) %>

<%
# Sanity checks
Y <- list(
 colSds        = colSds(X, na.rm=FALSE),
 apply         = apply(X, MARGIN=2L, FUN=sd, na.rm=FALSE),
 colSdColMeans = colSdColMeans(X, na.rm=FALSE)
)
lapply(Y, FUN=function(x) stopifnot(isTRUE(all.equal(x, Y[[1]]))))
%>

